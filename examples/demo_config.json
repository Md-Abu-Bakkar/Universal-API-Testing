{
  "app": {
    "name": "Universal API Tester Demo",
    "version": "1.0.0",
    "author": "Demo User",
    "description": "Demo configuration for testing"
  },
  "browser": {
    "firefox_path": "/usr/bin/firefox",
    "chromium_path": "/usr/bin/chromium-browser",
    "user_agent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
    "timeout": 30
  },
  "api_detection": {
    "timeout": 20,
    "retry_attempts": 2,
    "max_apis_per_scan": 25,
    "enable_auto_classification": true,
    "response_size_limit": 524288
  },
  "login": {
    "max_login_attempts": 2,
    "session_timeout": 1800,
    "auto_captcha_solve": true,
    "save_cookies": true
  },
  "export": {
    "python_template": "requests",
    "include_comments": true,
    "add_headers": true,
    "add_error_handling": true,
    "default_output_dir": "./demo_exports"
  },
  "gui": {
    "theme": "dark",
    "window_width": 1000,
    "window_height": 700,
    "auto_save_logs": true,
    "show_line_numbers": true
  },
  "security": {
    "verify_ssl": false,
    "allow_redirects": true,
    "max_redirects": 3,
    "user_agent_rotation": false
  },
  "logging": {
    "level": "DEBUG",
    "file_path": "./demo_logs/demo.log",
    "max_file_size": 5242880,
    "backup_count": 3
  },
  "advanced": {
    "concurrent_requests": 3,
    "delay_between_requests": 2,
    "enable_proxy": false,
    "proxy_url": "",
    "custom_headers": {
      "X-Custom-Header": "Demo-Value"
    },
    "blacklist_domains": [
      "google-analytics.com",
      "doubleclick.net"
    ]
  }
}
